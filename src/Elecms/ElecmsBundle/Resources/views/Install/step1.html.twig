{% extends "ElecmsBundle:Install:step.html.twig" %}

{% block head %}
    {% set step = 'Krok 1' %}
    {{ parent() }}
{% endblock %}

{% block content %}

    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="flash-error">
            {% autoescape %}
                {{ flashMessage|raw }}
            {% endautoescape %}
        </div>
    {% endfor %}

<div class="col-sm-offset-3 col-sm-6"><h3>Krok 1 - Baza danych</h3></div>
<div class="col-sm-offset-3 col-sm-6 well">

    {{ form_start(form) }}
        <div class="form-group">
             {{ form_label(form.server, 'Serwer bazy danych', { 'label_attr': {'class': 'col-sm-4 control-label'} }) }}
            <div class="col-sm-8">
                {{ form_widget(form.server, { 'attr': {'class': 'form-control', 'placeholder': 'np. localhost'} }) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.server, 'Nazwa bazy', { 'label_attr': {'class': 'col-sm-4 control-label'} }) }}
            <div class="col-sm-8">
                {{ form_widget(form.database, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.user, 'Użytkownik', { 'label_attr': {'class': 'col-sm-4 control-label'} }) }}
            <div class="col-sm-8">
                {{ form_widget(form.user, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.password, 'Hasło', { 'label_attr': {'class': 'col-sm-4 control-label'} }) }}
            <div class="col-sm-8">
                {{ form_widget(form.password, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                {{ form_end(form) }}
            </div>
        </div>


</div>
{% endblock %}