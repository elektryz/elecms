{% extends "ElecmsBundle:Install:step.html.twig" %}

{% block head %}
    {% set step = 'Krok 3' %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6"><h3>Krok 3 - Informacje o stronie</h3></div>
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 well">
<div class="alert alert-info">
    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>&nbsp;&nbsp;&nbsp;{% trans %}Those fields are not required. You can fill them later in the Admin Panel.{% endtrans %}
</div>
        {{ form_start(form) }}
        <div class="form-group">
            <div class="col-xs-12 col-md-5" style="text-align:right;">
                {{ form_label(form.title, 'Website name') }}
            </div>
            <div class="col-xs-12 col-md-7">
                {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12 col-md-5" style="text-align:right;">
                {{ form_label(form.tags, 'Tags (comma separated)') }}
            </div>
            <div class="col-xs-12 col-md-7">
                {{ form_widget(form.tags, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12 col-md-5" style="text-align:right;">
                {{ form_label(form.description, 'Description') }}
            </div>
            <div class="col-xs-12 col-md-7">
                {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>

    </div>

    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 well">
        <div class="form-group" style="margin-top: -20px;">
            <a href="{{ path('elecms_step', {'step': 2}) }}" class="btn btn-default step1_btn pull-left">&laquo; {% trans %}Previous{% endtrans %}</a>
            <input type="submit" value="{% trans %}Next{% endtrans %} &raquo;" class="btn btn-primary step1_btn pull-right" />
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}